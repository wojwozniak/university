@model  list05task02.Models.TaskSubmissionModel

<!DOCTYPE html>
<html>
<head>
    <title>Task Submission Form</title>
</head>
<body>
    @using (Html.BeginForm("Start", "Home", FormMethod.Post))
    {
        <div>
            <h2>Task Submission Form</h2>

            <label for="name">Name:</label>
            @Html.TextBoxFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name)<br />

            <label for="date">Date:</label>
            @Html.TextBoxFor(m => m.Date, new { type = "date" })
            @Html.ValidationMessageFor(m => m.Date)<br />

            <label for="subject">Subject Name:</label>
            @Html.TextBoxFor(m => m.Subject)
            @Html.ValidationMessageFor(m => m.Subject)<br />

            <label for="setNumber">Set Number:</label>
            @Html.TextBoxFor(m => m.SetNumber)
            @Html.ValidationMessageFor(m => m.SetNumber)<br />

            <h3>Tasks:</h3>
            <table>
                @for (int i = 0; i < Model.TaskScores.Count; i++)
                {
                    <tr>
                        <td>Task @(i + 1):</td>
                        <td>
                            @Html.TextBoxFor(m => m.TaskScores[i], new { type = "number", min = "0", max = "100", style = "width: 50px;" })
                        </td>
                        <td>Points</td>
                    </tr>
                }
            </table>

            <br />
            <button type="submit">Submit</button>
        </div>
    }

    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.6.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate.unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
